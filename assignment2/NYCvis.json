{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 1000,
  "height": 800,
  "title": "Shootings in New York City",
  "projection": {"type": "mercator"},
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/jasonkknipe/datatest/main/assignment2/police_precincts.topojson",
        "format": {"type": "topojson", "feature": "police_precincts"}
      },

      "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "darkgrey"},
      "encoding": {
        "tooltip": [{"field": "properties.Precinct", "type": "ordinal", "title": "Precinct"}]
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/jasonkknipe/datatest/main/assignment2/fullNYCshootings.csv"
      },

      "mark": {"type": "circle", "tooltip": {"content": "data"},"color":"red"},
      "encoding": {
        "longitude": {"field": "Longitude", "type": "quantitative"},
        "latitude": {"field": "Latitude", "type": "quantitative"}


      }
    }

  ]
}