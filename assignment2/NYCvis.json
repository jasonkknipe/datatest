{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 1000,
  "height": 800,
  "title": "Shootings in New York City",
  "projection": {"type": "mercator"},
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/jasonkknipe/datatest/main/assignment2/NYCboroughNew.topojson",
        "format": {"type": "topojson", "feature": "Borough_Boundaries"}
      },
      "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "black"}
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/jasonkknipe/datatest/main/assignment2/NYCshootings.csv"
      },
      "mark": {"type": "circle", "tooltip": {"content": "data"},"color":"red"},
      "encoding": {
        "longitude": {"field": "Longitude", "type": "quantitative"},
        "latitude": {"field": "Latitude", "type": "quantitative"}
      }
    }

  ]
}