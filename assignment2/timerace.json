{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {
    "url": "https://raw.githubusercontent.com/jasonkknipe/datatest/main/assignment2/fullNYCshootings.csv"
  },


  "width": 1000,
  "height": 300,

  "title":"Shootings in NYC (2006-2019)",

  "layer":[
    {"mark": "line",
      "encoding": {
        "stroke": {"value": "#CF202A"},
        "x": {
          "field": "OCCUR_DATE",
          "timeUnit": "yearmonth",
          "axis": {"title": "Month", "tickCount": 10, "grid": true}

        },
        "y": {"aggregate": "count", "title": "Count"}
      }},

    {
      "data": {
        "values": [{}]
      },
      "encoding": {
        "x": {"value":510}
      },
      "layer": [{
        "mark": "rule"
      }, {
        "mark": {
          "type": "text",
          "align": "left",
          "baseline": "top",
          "dx": 5,
          "dy": -120,
          "x": "width",
          "text": "NYC SAFE Act Signed"
        }
      }]
    }



  ]


}
