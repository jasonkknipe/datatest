{
  "data": { "url": "https://raw.githubusercontent.com/jasonkknipe/datatest/main/assignment2/fullNYCshootings.csv" },
  "width": 400,
  "height": 300,
  "transform": [
    {
      "aggregate": [{
        "op": "count",
        "field": "VIC_RACE",
        "as": "vic_total"
      }],
      "groupby": ["VIC_RACE"]
    }
  ],

  "mark": {"type": "bar", "yOffset": 5, "cornerRadiusEnd": 2, "height": {"band": 0.5}},
  "encoding": {
    "x": { "field": "vic_total",
      "type": "quantitative",
      "title":"Incidents"

    },
    "color":{"value": "#CF202A"},
    "y": { "field": "VIC_RACE",
      "type": "ordinal" ,
      "title":"Victim Race",
      "sort": ["BLACK", "WHITE HISPANIC", "BLACK HISPANIC", "WHITE", "ASIAN / PACIFIC ISLANDER", "UNKNOWN", "AMERICAN INDIAN/ALASKAN NATIVE"],

      "scale": {"padding": 0},
      "axis": {
        "bandPosition": 0,
        "grid": true,
        "domain": false,
        "ticks": false,
        "labelAlign": "left",
        "labelBaseline": "middle",
        "labelPadding": -5,
        "labelOffset": -15,
        "titleX": 5,
        "titleY": -5,
        "titleAngle": 0,
        "titleAlign": "left"
      }



    },

    "tooltip": [
      {"field": "VIC_RACE", "type": "ordinal", "title": "Victim Race"},
      {"field": "vic_total", "type": "quantitative", "title":"Incidents"}
    ]


  }}
